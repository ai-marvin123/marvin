{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Output */
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["server/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "client"]
}
